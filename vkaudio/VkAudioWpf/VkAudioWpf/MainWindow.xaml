<Window x:Class="VkAudioWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zeus" Background="Silver" Height="600" Width="800" AllowsTransparency="True" WindowStyle="None" Loaded="Window_Loaded" Closing="Window_Closing" Initialized="Window_Initialized" Icon="Icon1.ico" ResizeMode="CanMinimize">
    <Window.Resources>
        <Style  TargetType="Button" x:Key="TopPanelButton">
            <Setter Property="Background"
          Value="Silver" />
            <Setter Property="HorizontalAlignment"
          Value="Center" />
            <Setter Property="VerticalAlignment"
          Value="Center" />
            <Setter Property="Foreground"
          Value="White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="bg"
                Background="{TemplateBinding Background}"
                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalAlignment}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                   Value="True">
                                <Setter Property="Background"
                    Value="SlateGray"
                    TargetName="bg" />
                            </Trigger>
                            <Trigger Property="IsPressed"
                   Value="True">
                                <Setter Property="Background"
                    Value="RoyalBlue"
                    TargetName="bg" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type Button}" x:Key="roundedButton">
            <!-- Template for button style -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <!-- Content handles within a border -->
                        <Border x:Name="bdr" CornerRadius="0" Margin="3" BorderThickness="1" BorderBrush="Black" Background="DarkSlateGray" >
                            <!-- ContentPresenter properties. Set the content source as the content from each control define below -->
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Content" TextBlock.FontSize="12" />
                        </Border>

                        <!-- Required triggers define here -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="DarkGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="{x:Type TabItem}">
            <!-- Template for button style -->
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Grid>
                            <Border Name="Border" Margin="0,0,0,0" Background="Transparent"
                  BorderBrush="Black" BorderThickness="1" CornerRadius="0">
                                <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center"
                              HorizontalAlignment="Center"
                              ContentSource="Header" Margin="12,2,12,2"
                              RecognizesAccessKey="True">
                                </ContentPresenter>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="DarkSlateGray" />
                                <Setter TargetName="Border" Property="BorderThickness" Value="1,1,1,0" />
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" SourceName="Border" Value="True" />
                                    <Condition Property="IsSelected" Value="True" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Border" Property="BorderBrush" Value="DarkSlateGray" />
                            </MultiTrigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" SourceName="Border" Value="True" />
                                    <Condition Property="IsSelected" Value="False" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Border" Property="BorderBrush" Value="DarkGray" />
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- All ComboBox styles -->
        <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="20" />
                </Grid.ColumnDefinitions>
                <Border
          x:Name="Border" 
          Grid.ColumnSpan="2"
          CornerRadius="0"
          Background="DarkSlateGray"
          BorderBrush="DarkSlateGray"
          BorderThickness="1" />
                <Path 
          x:Name="Arrow"
          Grid.Column="1"     
          Fill="White" 
                                  Opacity="100"
          HorizontalAlignment="Center"
          VerticalAlignment="Center"/>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter TargetName="Border" Property="Background" Value="LightGray" />
                    <Setter TargetName="Border" Property="BorderBrush" Value="Gray" />
                    <Setter Property="Foreground" Value="DarkGray"/>
                    <Setter TargetName="Arrow" Property="Fill" Value="DarkGray" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <!-- ComboBox TextBox -->
        <ControlTemplate x:Key="ComboBoxTextBox" TargetType="TextBox">
            <Border x:Name="PART_ContentHost" Focusable="False" Background="DarkSlateGray" />
        </ControlTemplate>

        <!-- ComboBox style -->
        <Style x:Key="{x:Type ComboBox}" TargetType="ComboBox">
            <Setter Property="SnapsToDevicePixels" Value="true"/>
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="true"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="MinHeight" Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton 
                    Name="ToggleButton" 
                    Template="{StaticResource ComboBoxToggleButton}" 
                    Grid.Column="2" 
                    Focusable="false"
                    IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}"
                    ClickMode="Press">
                            </ToggleButton>
                            <ContentPresenter
                        Name="ContentSite"
                        IsHitTestVisible="False" 
                        Content="{TemplateBinding SelectionBoxItem}"
                        ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                        ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                        Margin="3,3,23,3"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left" />
                            <TextBox x:Name="PART_EditableTextBox"
                        Style="{x:Null}" 
                        Template="{StaticResource ComboBoxTextBox}" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Center" 
                        Text="{TemplateBinding Text}"
                        Margin="3,3,23,3"
                        Focusable="True" 
                        Background="Transparent"
                        Visibility="Visible"
                        Foreground="White"
                        IsReadOnly="{TemplateBinding IsReadOnly}"/>
                            <Popup 
                        Name="Popup"
                        Placement="Bottom"
                        IsOpen="{TemplateBinding IsDropDownOpen}"
                        AllowsTransparency="True" 
                        Focusable="False"
                        PopupAnimation="Slide">
                                <Grid 
                          Name="DropDown"
                          SnapsToDevicePixels="True"                
                          MinWidth="{TemplateBinding ActualWidth}"
                          MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border 
                                x:Name="DropDownBorder"
                                Background="White"
                                BorderThickness="1"
                                BorderBrush="DarkSlateGray"/>
                                    <ScrollViewer Margin="0" SnapsToDevicePixels="True" >
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" Background="DarkSlateGray"/>
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="HasItems" Value="false">
                                <Setter TargetName="DropDownBorder" Property="MinHeight" Value="95"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="LightGray"/>
                            </Trigger>
                            <Trigger Property="IsGrouping" Value="true">
                                <Setter Property="ScrollViewer.CanContentScroll" Value="false"/>
                            </Trigger>
                            <Trigger SourceName="Popup" Property="Popup.AllowsTransparency" Value="true">
                                <Setter TargetName="DropDownBorder" Property="CornerRadius" Value="0,0,4,4"/>
                                <Setter TargetName="DropDownBorder" Property="Margin" Value="0"/>
                            </Trigger>
                            <Trigger Property="IsEditable"
           Value="true">
                                <Setter Property="IsTabStop" Value="false"/>
                                <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="ContentSite" Property="Visibility" Value="Hidden"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
            </Style.Triggers>
        </Style>
        <Style x:Key="toggle" TargetType="{x:Type ToggleButton}">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="DarkGray"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Name="border" CornerRadius="0" Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Content" TextBlock.FontSize="12" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#FFD3F3E3"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type ListBoxItem}" x:Key="lstStyle">
            <Setter Property="OverridesDefaultStyle" Value="True"></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                        <Grid x:Name="grid">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Border x:Name="hover"
                            Background="#99E7E7E7"
                            BorderBrush="#99979797"
                            BorderThickness="1"
                            CornerRadius="3"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Visibility="Collapsed">
                            </Border>
                            <Border x:Name="highlight"
                            Background="#99B0FFA5"
                            BorderBrush="#995CB74E"
                            BorderThickness="1"
                            CornerRadius="3"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Visibility="Collapsed">
                            </Border>
                            <ContentPresenter></ContentPresenter>
                            <Border Height="1"
                            BorderBrush="#99D7D7D7"
                            BorderThickness="0,1,0,0"
                            Grid.Row="1">
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="hover"
                                Property="Visibility"
                                Value="Visible">
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="highlight"
                                Property="Visibility"
                                Value="Visible">
                                </Setter>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo x:Name="taskInfo">
            <!--<TaskbarItemInfo.ThumbnailClipMargin-->
        </TaskbarItemInfo>
    </Window.TaskbarItemInfo>
    <Border BorderThickness="1" BorderBrush="Black">
        <StackPanel>
            <Border BorderThickness="0,0,0,1" BorderBrush="Black">
                <Grid Height="30px" Background="Silver" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30px"/>
                        <ColumnDefinition Width="30px"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="30px"/>
                        <ColumnDefinition Width="30px"/>
                        <ColumnDefinition Width="30px"/>
                    </Grid.ColumnDefinitions>
                    <Button Width="30px" Height="30px" Background="Silver" Foreground="White"  Grid.Column="0" IsEnabled="False" Style="{StaticResource TopPanelButton}">Z</Button>
                    <Button Width="30px" Height="30px" Background="Silver" Foreground="White"  Grid.Column="1" Style="{StaticResource TopPanelButton}" >
                        <Image Source="/images/settings.png" Width="25px" Height="25px"/>
                    </Button>

                    <Label Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2" x:Name="headerLabel">Zeus</Label>

                    <Button Width="30px" Height="30px" Background="Silver" Foreground="White"  Grid.Column="3" Style="{StaticResource TopPanelButton}"  Click="MinimizeClick">_</Button>
                    <Button Width="30px" Height="30px" Background="Silver" Foreground="White"  Grid.Column="4" Style="{StaticResource TopPanelButton}">M</Button>
                    <Button Width="30px" Height="30px" Background="Silver" Foreground="White"  Grid.Column="5" Style="{StaticResource TopPanelButton}" Click="Exit">X</Button>
                </Grid>
            </Border>
            <Border BorderThickness="0,0,0,1" BorderBrush="Black">
                <Grid Height="160px" x:Name="container">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150px"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" OpacityMask="#FF79ACAC" x:Name="pictureBox"></Image>
                    <StackPanel Grid.Column="1">
                        <Label Padding="5px" x:Name="titleLabel">
                            Author - Title
                        </Label>

                        <DockPanel Margin="5px" Width="auto">
                            <Button Style="{StaticResource roundedButton}" Height="50px" Width="50px" x:Name="prevButton" Click="prevButton_Click">
                                <Canvas Margin="-15px,-10px,0,0">
                                    <Polygon Points="16,0 0,10, 16,20" Stroke="Black" Fill="White" Margin="10,0,0,0"/>
                                    <Polygon Points="16,0 0,10, 16,20" Stroke="Black" Fill="White" />
                                </Canvas>
                            </Button>
                            <Button Style="{StaticResource roundedButton}" Height="50px" Width="50px" x:Name="playPauseButton" Click="playPauseButton_Click">
                                <Canvas x:Name="platPauseCanvas" Margin="-5px,-8px,0,0">
                                    <Polygon Points="0,0 16,10, 0,20" Stroke="Black" Fill="White" Margin="0,-2px,0,0"/>
                                    <!--<Rectangle Width="5px" Height="15px" Fill="White"></Rectangle>
                                    <Rectangle Margin="10px,0,0,0" Width="5px" Height="15px" Fill="White"></Rectangle>-->
                                </Canvas>
                            </Button>
                            <Button Style="{StaticResource roundedButton}" Height="50px" Width="50px" x:Name="stopButton" Click="stopButton_Click">
                                <Rectangle Width="15px" Height="15px" Fill="White"></Rectangle>
                            </Button>
                            <Button  Style="{StaticResource roundedButton}" Height="50px" Width="50px" x:Name="nextButton" Click="nextButton_Click">
                                <Canvas Margin="-10px,-10px,0,0">
                                    <Polygon Points="0,0 16,10, 0,20" Stroke="Black" Fill="White" />
                                    <Polygon Points="0,0 16,10, 0,20" Stroke="Black" Fill="White" Margin="10,0,0,0"/>
                                </Canvas>
                            </Button>
                            <StackPanel Margin="7,0,0,0">
                                <ProgressBar Height="15" Width="200"  Name="volumeBar" Value="100" MouseDown="volumeBar_MouseDown" MouseWheel="volumeBar_MouseWheel" MouseMove="volumeBar_MouseMove" Margin="0,30,0,-20"></ProgressBar>
                                <Label HorizontalAlignment="Center"  Foreground="SlateGray"   Content="volume" MouseDown="volumeBar_MouseDown" MouseMove="volumeBar_MouseMove" MouseWheel="volumeBar_MouseWheel"/>
                            </StackPanel>

                            <ToggleButton  Style="{StaticResource toggle}" IsChecked="True" HorizontalAlignment="Right" Name="playlistButton" DockPanel.Dock="Right" Height="50px" Width="50px" Click="playlistButton_Click">
                                PL
                            </ToggleButton>
                            <ToggleButton  Style="{StaticResource toggle}" HorizontalAlignment="Right" DockPanel.Dock="Right" Height="50px" Width="50px" >
                                EQ
                            </ToggleButton>
                            <ToggleButton Style="{StaticResource toggle}" IsChecked="False" HorizontalAlignment="Right" DockPanel.Dock="Right"  Height="50px" Width="50px" x:Name="checkBoxShuffle"  Checked="checkBoxShuffle_Checked">
                                SH
                            </ToggleButton>
                            <ToggleButton  Style="{StaticResource toggle}"  HorizontalAlignment="Right" DockPanel.Dock="Right"  Height="50px" Width="50px"  x:Name="checkBoxRepeat">
                                RE
                            </ToggleButton>

                        </DockPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Name="startTime" HorizontalAlignment="Left" Content="0:00"/>
                            <ProgressBar  Height="30px" Background="#FF082525" BorderBrush="#FF2D7A7A" Foreground="#FF007878" Margin="5px,0,5px,0px" Value="55" Width="570" x:Name="progressBar" MouseDown="progressBar_MouseDown"/>
                            <Label Name="endTime" HorizontalAlignment="Right" Content="0:00"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
            <TabControl Height="auto" Background="Silver">
                <TabItem Header="Мої аудіо">
                    <Grid Height="auto">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30px"></RowDefinition>
                            <RowDefinition Height="300px"></RowDefinition>
                            <RowDefinition Height="30px"></RowDefinition>
                        </Grid.RowDefinitions>
                        <!--acccount - vk, authorize, count of tracks,sorting-->
                        <StackPanel Orientation="Horizontal">
                            <Button Style="{StaticResource roundedButton}" x:Name="logInButton" Click="logInButton_Click" Height="30" VerticalAlignment="Top">Авторизуватися в VK</Button>
                            <Label x:Name="usernameLabel">Ваше ім'я</Label>

                            <Button Style="{StaticResource roundedButton}" x:Name="updateButton" Click="updateButton_Click">Оновити</Button>
                            <Button Style="{StaticResource roundedButton}" x:Name="offlineButton" Click="offlineButton_Click">Оффлайн</Button>

                            <Button Style="{StaticResource roundedButton}" x:Name="logOutButton" Click="logOutButton_Click">Вийти</Button>
                            <Button Style="{StaticResource roundedButton}" x:Name="logInLastButton" Click="logInLastButton_Click">Вхід Last.fm</Button>
                            <Label x:Name="tracksCountLabel">0 треків</Label>
                            <ComboBox SelectedIndex="0" VerticalAlignment="Center" IsReadOnly="True" SelectionChanged="ComboBox_SelectionChanged" Name="sortCombobox">
                                <ComboBoxItem>За датою додавання</ComboBoxItem>
                                <ComboBoxItem>За назвою</ComboBoxItem>
                            </ComboBox>
                            <ToggleButton  Style="{StaticResource toggle}" Name="reverseButton" Click="ToggleButton_Click_1">Z->A</ToggleButton>
                            <ToggleButton  Style="{StaticResource toggle}" IsChecked="True" Click="ToggleButton_Click">Транслювати в вк</ToggleButton>
                            <Button  Style="{StaticResource roundedButton}" Click="Button_Click_2">Поточний трек</Button>
                        </StackPanel>
                        <ListBox Grid.Row="1" Margin="5" Background="Silver" Name="listBox" MouseMove="listBox_MouseMove" KeyUp="listBox_KeyUp" KeyDown="listBox_KeyDown" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Visible" SelectionChanged="listBox_SelectionChanged" Width="780"/>
                        <StackPanel Orientation="Horizontal" Grid.Row="2">
                            <Label>Пошук в списку</Label>
                            <TextBox Width="250" Background="DarkGray" Foreground="White" KeyUp="TextBox_KeyUp" Name="searchBox" KeyDown="searchBox_KeyDown"></TextBox>
                            <Button Width="30" Style="{StaticResource roundedButton}" x:Name="clearButton" Click="clearButton_Click">Х</Button>
                            <Button Width="40" Content="&lt;&lt;" Style="{StaticResource roundedButton}" Click="Button_Click_1"></Button>
                            <Button Width="40" Content="&gt;&gt;" Style="{StaticResource roundedButton}" Click="Button_Click"></Button>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="Мої альбоми" Margin="-3,1,3,-1">
                    <Grid Height="auto">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30px"></RowDefinition>
                            <RowDefinition Height="300px"></RowDefinition>
                            <RowDefinition Height="30px"></RowDefinition>
                        </Grid.RowDefinitions>
                        <!--acccount - vk, authorize, count of tracks,sorting-->
                        <StackPanel Orientation="Horizontal">
                            <ComboBox SelectedIndex="0" VerticalAlignment="Center" IsReadOnly="True" SelectionChanged="albumsCombobox_SelectionChanged"  Name="albumsCombobox">
                            </ComboBox>
                            <Button Style="{StaticResource roundedButton}" x:Name="updateAlbumsButton" Click="updateAlbumsButton_Click">Оновити</Button>

                            <Label x:Name="tracksCountAlbumLabel">0 треків</Label>
                            <ComboBox SelectedIndex="0" VerticalAlignment="Center" IsReadOnly="True" SelectionChanged="sortInAlbumCombobox_SelectionChanged"  Name="sortInAlbumCombobox">
                                <ComboBoxItem>За датою додавання</ComboBoxItem>
                                <ComboBoxItem>За назвою</ComboBoxItem>
                            </ComboBox>
                            <ToggleButton  Style="{StaticResource toggle}" Name="reverseInAlbumButton" Click="reverseInAlbumButton_Click">Z->A</ToggleButton>
                            <Button  Style="{StaticResource roundedButton}" Click="Button_Click_3">Поточний трек</Button>
                        </StackPanel>
                        <ListBox Grid.Row="1" Margin="5" Background="Silver" Name="listAlbumBox" MouseMove="listAlbumBox_MouseMove"  KeyUp="listAlbumBox_KeyUp"  KeyDown="listAlbumBox_KeyDown"  ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Visible" SelectionChanged="listAlbumBox_SelectionChanged" Width="780"/>
                        <StackPanel Orientation="Horizontal" Grid.Row="2">
                            <Label>Пошук в списку</Label>
                            <TextBox Width="250" Background="DarkGray" Foreground="White" KeyUp="searchInAlbumBox_KeyUp"  Name="searchInAlbumBox" KeyDown="searchInAlbumBox_KeyDown"></TextBox>
                            <Button Width="30" Style="{StaticResource roundedButton}" x:Name="clearInAlbumButton" Click="clearInAlbumButton_Click">Х</Button>
                            <Button Width="40" Content="&lt;&lt;" Style="{StaticResource roundedButton}" Name="searchInAlbumPrev" Click="searchInAlbumPrev_Click"></Button>
                            <Button Width="40" Content="&gt;&gt;" Style="{StaticResource roundedButton}" Name="searchInAlbumNext" Click="searchInAlbumNext_Click"></Button>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="Музика друзів">
                    <Grid Height="370">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250px"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <StackPanel x:Name="userStackPanel" Grid.Column="0" Height="370">
                            <!--<Button Style="{StaticResource roundedButton}" x:Name="updateFriendListButton" Click="updateFriendList_Click">Оновити друзів</Button>-->
                            <Label x:Name="usersInfoLabel"></Label>
                            <ListBox Margin="5" Background="Silver" Name="listUserBox"   ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Visible" Height="340" SelectionChanged="listUserBox_SelectionChanged"/>
                        </StackPanel>

                        <Grid Height="auto" Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30px"></RowDefinition>
                                <RowDefinition Height="300px"></RowDefinition>
                                <RowDefinition Height="30px"></RowDefinition>
                            </Grid.RowDefinitions>
                            <!--acccount - vk, authorize, count of tracks,sorting-->
                            <StackPanel Orientation="Horizontal">

                                <Button Style="{StaticResource roundedButton}" x:Name="updateuserTracksButton" Click="updateuserTracksButton_Click">Оновити</Button>

                                <Label x:Name="tracksUserCountLabel">0 треків</Label>
                                <ComboBox SelectedIndex="0" VerticalAlignment="Center" IsReadOnly="True" SelectionChanged="sortInUserTracksCombobox_SelectionChanged"  Name="sortInUserTracksCombobox">
                                    <ComboBoxItem>За датою додавання</ComboBoxItem>
                                    <ComboBoxItem>За назвою</ComboBoxItem>
                                </ComboBox>
                                <ToggleButton  Style="{StaticResource toggle}" Name="reverseInUserTracksButton" Click="reverseInUserTracksButton_Click">Z->A</ToggleButton>
                                <Button  Style="{StaticResource roundedButton}" Click="GetCurrentUserTrack_Click">Поточний трек</Button>
                            </StackPanel>
                            <ListBox Grid.Row="1" Margin="5" Background="Silver" Name="listUserTracksBox" MouseMove="listAlbumBox_MouseMove"  KeyUp="listAlbumBox_KeyUp"  KeyDown="listAlbumBox_KeyDown"  ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Visible" SelectionChanged="listUserTracksBox_SelectionChanged"  Width="530"/>
                            <StackPanel Orientation="Horizontal" Grid.Row="2">
                                <Label>Пошук в списку</Label>
                                <TextBox Width="250" Background="DarkGray" Foreground="White" KeyUp="searchInUserTracksBox_KeyUp"  Name="searchInUserTracksBox" KeyDown="searchInAlbumBox_KeyDown"></TextBox>
                                <Button Width="30" Style="{StaticResource roundedButton}" x:Name="clearInSearchUserTracksButton" Click="clearInSearchUserTracksButton_Click">Х</Button>
                                <Button Width="40" Content="&lt;&lt;" Style="{StaticResource roundedButton}" Name="searchInUserTracksPrev" Click="searchInUserTracksPrev_Click"></Button>
                                <Button Width="40" Content="&gt;&gt;" Style="{StaticResource roundedButton}" Name="searchInUserTracksNext" Click="searchInUserTracksNext_Click"></Button>
                            </StackPanel>
                        </Grid>

                    </Grid>
                </TabItem>
                <TabItem Header="Рекомендовані"></TabItem>
                <TabItem Header="Популярні"></TabItem>
                <TabItem Header="Рошук"></TabItem>
            </TabControl>
        </StackPanel>
    </Border>
</Window>
