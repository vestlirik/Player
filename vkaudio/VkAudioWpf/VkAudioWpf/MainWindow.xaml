<Window x:Class="VkAudioWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Background="Silver" Height="600" Width="800" AllowsTransparency="True" WindowStyle="None" >
    <Window.Resources>
        <Style  TargetType="Button" x:Key="TopPanelButton">
            <Setter Property="Background"
          Value="Silver" />
            <Setter Property="HorizontalAlignment"
          Value="Center" />
            <Setter Property="VerticalAlignment"
          Value="Center" />
            <Setter Property="Foreground"
          Value="White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="bg"
                Background="{TemplateBinding Background}"
                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalAlignment}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                   Value="True">
                                <Setter Property="Background"
                    Value="SlateGray"
                    TargetName="bg" />
                            </Trigger>
                            <Trigger Property="IsPressed"
                   Value="True">
                                <Setter Property="Background"
                    Value="RoyalBlue"
                    TargetName="bg" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type Button}" x:Key="roundedButton">
            <!-- Template for button style -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <!-- Content handles within a border -->
                        <Border x:Name="bdr" CornerRadius="15" Margin="3" BorderThickness="1" BorderBrush="Black" Background="DarkSlateGray" Height="40px" Width="40px">
                            <!-- ContentPresenter properties. Set the content source as the content from each control define below -->
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Content" TextBlock.FontSize="20" />
                        </Border>
                        
                        <!-- Required triggers define here -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="DarkGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>
    <Border BorderThickness="1" BorderBrush="Black">
        <StackPanel>
            <Border BorderThickness="0,0,0,1" BorderBrush="Black">
                <Grid Height="30px" Background="Silver" MouseLeftButtonUp="Grid_MouseLeftButtonUp" MouseMove="Grid_MouseMove" MouseLeftButtonDown="Grid_MouseLeftButtonDown" MouseDown="Grid_MouseDown">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30px"/>
                        <ColumnDefinition Width="30px"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="30px"/>
                        <ColumnDefinition Width="30px"/>
                        <ColumnDefinition Width="30px"/>
                    </Grid.ColumnDefinitions>
                    <Button Width="30px" Height="30px" Background="Silver" Foreground="White"  Grid.Column="0" IsEnabled="False" Style="{StaticResource TopPanelButton}">Z</Button>
                    <Button Width="30px" Height="30px" Background="Silver" Foreground="White"  Grid.Column="1" Style="{StaticResource TopPanelButton}" >
                        <Image Source="/images/settings.png" Width="25px" Height="25px"/>
                    </Button>

                    <Label Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2">VkAudio</Label>

                    <Button Width="30px" Height="30px" Background="Silver" Foreground="White"  Grid.Column="3" Style="{StaticResource TopPanelButton}">_</Button>
                    <Button Width="30px" Height="30px" Background="Silver" Foreground="White"  Grid.Column="4" Style="{StaticResource TopPanelButton}">M</Button>
                    <Button Width="30px" Height="30px" Background="Silver" Foreground="White"  Grid.Column="5" Style="{StaticResource TopPanelButton}" MouseEnter="Button_MouseEnter" Click="Exit">X</Button>
                </Grid>
            </Border>
            <Border BorderThickness="0,0,0,1" BorderBrush="Black">
                <Grid Height="150px">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150px"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" OpacityMask="#FF79ACAC"></Image>
                    <StackPanel Grid.Column="1">
                        <Label Padding="5px">
                            Author - Title
                        </Label>
                        <Label Padding="5px">
                            320 kbps      44 100 Hz
                        </Label>
                        <DockPanel Margin="5px" Width="auto">
                            <Button Style="{StaticResource roundedButton}">
                                <Image Source="/images/prev.png" Width="40px" Height="40px" Margin="10px,10px,0,0"></Image>
                            </Button>
                            <Button Style="{StaticResource roundedButton}">
                                <Image Source="images/playpause.png" Height="40px" Width="40px" Margin="0,10px,0,0" StretchDirection="DownOnly"/>
                            </Button>
                            <Button Style="{StaticResource roundedButton}">
                                <Rectangle Width="15px" Height="15px" Fill="White"></Rectangle>
                            </Button>
                            <Button  Style="{StaticResource roundedButton}">
                                <Image Source="/images/next.png" Width="40px" Height="40px" Margin="15px,10px,0,0"></Image>
                            </Button>
                            <Button  Style="{StaticResource roundedButton}" HorizontalAlignment="Right" DockPanel.Dock="Right">
                                PL
                            </Button>
                            <Button  Style="{StaticResource roundedButton}" HorizontalAlignment="Right" DockPanel.Dock="Right" >
                                EQ
                            </Button>
                            <Button  Style="{StaticResource roundedButton}" HorizontalAlignment="Right" DockPanel.Dock="Right" >
                                SH
                            </Button>
                            <Button  Style="{StaticResource roundedButton}" HorizontalAlignment="Right" DockPanel.Dock="Right" >
                                RE
                            </Button>
                            
                        </DockPanel>
                        <ProgressBar  Height="30px" Background="#FF082525" BorderBrush="#FF2D7A7A" Foreground="#FF007878" Margin="10px,0,10px,0" Value="55"></ProgressBar>
                    </StackPanel>
                </Grid>
            </Border>
            <TabControl Height="auto" >
                <TabItem Header="Мої аудіо">
                    <Grid Height="auto">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30px"></RowDefinition>
                            <RowDefinition Height="300px"></RowDefinition>
                            <RowDefinition Height="30px"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0">acccount - vk, authorize, count of tracks,sorting</Label>
                        <Label Grid.Row="1">tracks</Label>
                        <Label Grid.Row="2">search</Label>
                    </Grid>
                </TabItem>
                <TabItem Header="Мої альбоми"></TabItem>
                <TabItem Header="Музика друзів"></TabItem>
                <TabItem Header="Рекомендовані"></TabItem>
                <TabItem Header="Популярні"></TabItem>
                <TabItem Header="Рошук"></TabItem>
            </TabControl>
        </StackPanel>
    </Border>
</Window>
